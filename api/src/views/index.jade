  h2 Contents
  ul.contents
    each c in contents
      li
        form(action="update", method="post")
          input(type='hidden' name='id' value=c.id)

        span.content= c.comment
        div.content= c.color_code 
        div= c.titel 
        div= c.record_ymd
        div= c.category_name

        form(action="delete", method="post")
          input(type='hidden' name='id' value=c.id)
          button.delete X

